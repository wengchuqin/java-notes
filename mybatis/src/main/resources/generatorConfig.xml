<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="demo" targetRuntime="MyBatis3DynamicSql">
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://xxx:5002/xxx?autoReconnect:true;useUnicode:true;characterEncoding:UTF-8"
                        userId="xxx"
                        password="xxx">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <javaModelGenerator targetPackage="notes.mybatis.gen"
                            targetProject="src/main/java/">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="/mapper"
                         targetProject="src/main/resources/">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER" targetPackage="notes.mybatis.gen"
                             targetProject="src/main/java/">
            <property name="enableSubPackages" value="true"/>
            <property name="exampleMethodVisibility" value="default"/>
        </javaClientGenerator>


        <table tableName="simple_table" domainObjectName="SimpleTable"/>

    </context>
</generatorConfiguration>